<%= form_with url: cars_path, method: :get, class: "d-flex" do %>
  <div class="d-flex align-items-center mb-0 me-2">
    <%= label_tag :start_date, "Start Date", class: "form-label mb-0 form-input" %>
    <%= date_field_tag :start_date, params[:start_date], class: "form-control rounded-5" %>
  </div>
  <div class="d-flex align-items-center mb-0 me-2">
    <%= label_tag :end_date, "End Date", class: "form-label mb-0 form-input" %>
    <%= date_field_tag :end_date, params[:end_date], class: "form-control rounded-5" %>
  </div>
  <%= submit_tag "Search", name: nil, class: "btn btn-primary ms-2 rounded-4", id: "search-button" %>
<% end %>
