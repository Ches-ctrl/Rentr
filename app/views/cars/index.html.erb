<div class="container-fluid mt-2">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <div class="card-image">
            <% if car.photos.any? %>
              <%= link_to car_path(car) do %>
                <%= image_tag(car.photos.first.url, class: 'card-img-top', alt: "#{car.brand} #{car.model}") %>
              <% end %>
            <% else %>
              <%= link_to car_path(car) do %>
                <%= image_tag('new_car.jpg', class: 'card-img-top', alt: 'Placeholder Image') %>
              <% end %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-title d-flex">
              <h2 class="card-title 1 me-2"><%= car.brand %></h2>
              <h2><%= car.model %></h2>
            </div>
            <div class="card-details-1">
              <p class="card-text"> <i class="fa-solid fa-gears"></i> <%= car.transmission %></p>
              <p class="card-text"> <i class="fa-solid fa-location-dot"></i> <%= car.location %></p>
            </div>
            <div class="d-flex justify-content-end">
              <p class="card-price"> Â£<%= car.day_rate.round() %>/day</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
