<div class="mx-auto p-2 fs-3 font-weight-600">
  <p>Request To Book</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-3" style="max-width: 18rem;">
        <div class="card-body">
          <!-- Image section without link -->
          <% if @car.photos.any? %>
            <%= image_tag(@car.photos.first.url, class: 'card-img-top img-fluid smaller-img', alt: "#{@car.brand} #{@car.model}") %>
          <% else %>
            <%= image_tag('new_car.jpg', class: 'card-img-top img-fluid smaller-img', alt: 'Placeholder Image') %>
          <% end %>

          <!-- Rest of the card body -->
          <div class="card-title d-flex">
            <h2 class="card-title 1 me-2"><%= @car.brand %></h2>
            <h2><%= @car.model %></h2>
          </div>
          <div class="card-details-1">
            <p class="card-text"> <i class="fa-solid fa-gears"></i> <%= @car.transmission %></p>
            <p class="card-text"> <i class="fa-solid fa-location-dot"></i> <%= @car.location %></p>
          </div>
          <div class="d-flex justify-content-end">
            <p class="card-price"> £<%= @car.day_rate.round() %>/day</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 sticky-bottom">
      <div class="card border shadow" style="max-width: 35em align-items-strech ">
        <div class="card-body">
          <%= render "form", booking: @booking %>
        </div>
      </div>
    </div>
  </div>
</div>

